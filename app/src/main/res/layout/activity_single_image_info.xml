<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.vogella.android.tap4share.SingleImageInfo">

    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">

        <ImageView
            android:id="@+id/singleimage_image"
            android:layout_width="match_parent"
            android:layout_height="600px"
            android:layout_marginTop="15dp"
            android:layout_marginBottom="15dp"/>

        <TextView
            android:id="@+id/singleimage_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="50px"
            android:layout_marginLeft="15px"
            android:layout_below="@+id/singleimage_image"/>

        <TextView
            android:id="@+id/singleimage_timestamp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textStyle="italic"
            android:layout_marginLeft="15px"
            android:layout_below="@+id/singleimage_title"/>

        <TextView
            android:id="@+id/singleimage_description"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="15px"
            android:layout_marginTop="15px"
            android:layout_marginBottom="15px"
            android:layout_below="@+id/singleimage_timestamp"/>

        <TextView
            android:id="@+id/singleimage_location"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="15px"
            android:layout_below="@+id/singleimage_description"/>




    </RelativeLayout>


</android.support.constraint.ConstraintLayout>
