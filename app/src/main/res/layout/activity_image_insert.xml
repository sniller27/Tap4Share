<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.vogella.android.tap4share.ImageInsert">


    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <TextView
            android:id="@+id/insertartistheader"
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:textSize="22dp"
            android:text="Insert new artist"/>

        <ImageView
            android:id="@+id/photo"
            android:layout_width="600px"
            android:layout_height="600px"
            android:contentDescription="@string/app_name"
            android:src="@drawable/tab_menu_tap"
            android:layout_below="@+id/insertartistheader"
            android:layout_centerInParent="true"/>

        <EditText
            android:id="@+id/artistname"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:hint="artist name"
            android:inputType="text"
            android:layout_below="@+id/photo"/>

        <EditText
            android:id="@+id/artistbirthplace"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:hint="artist birthplace"
            android:inputType="text"
            android:layout_below="@+id/artistname"/>

        <EditText
            android:id="@+id/artistbdate"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:hint="artist bdate"
            android:inputType="text"
            android:layout_below="@+id/artistbirthplace"/>

        <EditText
            android:id="@+id/artistfavorite"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:hint="artist favorite"
            android:inputType="text"
            android:layout_below="@+id/artistbdate"/>

        <Button
            android:id="@+id/send_post_request"
            android:layout_height="wrap_content"
            android:layout_width="wrap_content"
            android:text="Share"
            android:layout_below="@+id/artistfavorite"
            android:layout_centerInParent="true"/>


    </RelativeLayout>



</android.support.constraint.ConstraintLayout>
