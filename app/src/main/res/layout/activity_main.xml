<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        android:layout_width="fill_parent"
        android:layout_height="495dp"
        tools:context="info.androidhive.jsonparsing.MainActivity">

        <ImageView android:id="@+id/imageView1" android:layout_height="wrap_content" android:src="@drawable/tab_menu_tap" android:layout_width="wrap_content"></ImageView>

        <ListView
            android:id="@+id/list"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/imageView1"/>

    </RelativeLayout>



    <RelativeLayout
        android:id="@+id/tab_title"
        android:layout_width="match_parent"
        android:layout_height="48dp"
        android:background="@color/transparent">


        <TextView
            android:id="@+id/text_top"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:gravity="center"
            android:textSize="24sp"
            android:textColor="@color/grey"
            android:text= "Tap4Share" />

        <!--<View-->
            <!--android:layout_width="match_parent"-->
            <!--android:layout_height="2dp"-->
            <!--android:background="@color/grey"-->
            <!--android:layout_alignParentBottom="true"/>-->

        <ImageView
            android:id="@+id/photo"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:contentDescription="@string/app_name"
            android:layout_below="@+id/text_top" />
    </RelativeLayout>



    <LinearLayout
        android:id="@+id/tab_menu"
        android:layout_width="match_parent"
        android:layout_height="75dp"
        android:orientation="horizontal"
        android:layout_alignParentBottom="true">

        <TextView
            android:id="@+id/text_home"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:background="@drawable/tab_menu_background"
            android:drawablePadding="1dp"
            android:drawableTop="@drawable/tab_menu_home"
            android:gravity="center"
            android:textColor="@drawable/tab_menu_text"
            android:text="Home"/>

        <TextView
            android:id="@+id/text_tap"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:background="@drawable/tab_menu_background"
            android:drawablePadding="1dp"
            android:drawableTop="@drawable/tab_menu_tap"
            android:gravity="center"
            android:textColor="@drawable/tab_menu_text"
            android:text="TAP!"/>

        <!--<TextView-->
            <!--android:id="@+id/text_shake"-->
            <!--android:layout_width="0dp"-->
            <!--android:layout_height="match_parent"-->
            <!--android:layout_weight="1"-->
            <!--android:background="@drawable/tab_menu_background"-->
            <!--android:drawablePadding="3dp"-->
            <!--android:drawableTop="@drawable/tab_menu_shake"-->
            <!--android:gravity="center"-->
            <!--android:textColor="@drawable/tab_menu_text"-->
            <!--android:text="Shake"/>-->



    </LinearLayout>


</RelativeLayout>